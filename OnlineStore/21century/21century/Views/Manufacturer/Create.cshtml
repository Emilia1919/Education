@model _21century.Models.Manufacturer

@{
    ViewBag.Title = string.Format("Создание производителя | {0}", _21century.Constants.TITLE);
}

<p>@Html.ActionLink("Отмена", "Index")</p>
<h2>Создание производителя</h2>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    <br />
    @Html.EditorFor(model => model.Name)
    <br />
    <br />

    @Html.LabelFor(model => model.Description)
    <br />
    @Html.TextAreaFor(model => model.Description, new { cols = 70, rows = 5 })
    <br />
    <br />

    <input type="submit" value="Создать" />
}