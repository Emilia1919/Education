@model IEnumerable<_21century.Models.Manufacturer>

@{
    ViewBag.Title = string.Format("Производители | {0}", _21century.Constants.TITLE);
}

<h2>Производители</h2>

<p>@Html.ActionLink("Создать", "Create")</p>

<table>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.ActionLink(item.Name, "Details", new { id = item.ID })</td>
            <td style="padding-left:30px;">@Html.ActionLink("Вверх", "Up", new { id = item.ID })</td>
            <td style="padding-left:30px;">@Html.ActionLink("Вниз", "Down", new { id = item.ID })</td>
        </tr>
    }
</table>