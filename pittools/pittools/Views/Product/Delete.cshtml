@model pittools.Models.Product

@{
    ViewBag.Title = string.Format("Удаление товара | {0}", pittools.Constants.TITLE);
}

<p>@Html.ActionLink("Отмена", "GetShortName", new { shortname = Model.ShortName, page = Request.QueryString["page"] })</p>
<h2 style="color:Red">Вы уверены, что хотите удалить этот товар?</h2>

@using (Html.BeginForm())
{
    <input type="submit" value="Удалить" />
}

<p style="font-weight:bold">@Model.Name</p>
<p><span style="font-weight:bold">Производитель: </span>@Model.Manufacturer.Name</p>
<p>@Model.Description</p>