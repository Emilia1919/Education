@model pittools.Models.Manufacturer

@{
    ViewBag.Title = "Удаление невозможно";
}

<p>@Html.ActionLink("К списку", "GetByShortName", new { shortName = string.Empty })</p>
<h2>Удаление невозможно</h2>
<span st yle="color:Red">Сначала удалите товары, ссылающиеся на этого производителя</span>

@if (Model != null && Model.Products.Count > 0)
{
    <ul>
        @foreach (var item in Model.Products)
        {
            <li>@Html.ActionLink(item.Name, "GetShortName", "Product", new { shortname = item.ShortName }, null)</li>
        }
    </ul>
}