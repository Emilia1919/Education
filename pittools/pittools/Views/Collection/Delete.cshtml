@model pittools.Models.Collection

@{
    ViewBag.Title = string.Format("Удаление коллекции | {0}", pittools.Constants.TITLE);
}

<p>@Html.ActionLink("Отмена", "GetCollectionInCategory", new { category = Model.Category.ShortName, collection = Model.ShortName })</p>
<h2 style="color:Red">Вы уверены, что хотите удалить эту коллекцию?</h2>

@using (Html.BeginForm())
{
    <input type="submit" value="Удалить" />
}

<p style="font-weight:bold">@Model.Name</p>
<p>Категория: <span style="font-weight:bold">@Model.Category.Name</span></p>
<p>@Model.Description</p>