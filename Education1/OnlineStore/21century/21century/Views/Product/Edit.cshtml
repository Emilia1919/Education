@model _21century.Models.Product

@{
    ViewBag.Title = string.Format("Редактирование товара | {0}", _21century.Constants.TITLE);
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<p>@Html.ActionLink("Отмена", "GetShortName", new { shortname = Model.ShortName, page = Request.QueryString["page"] }, new {@style="color: #808080;" })</p>
<h2 style="color: #b200ff; padding-bottom: 15px">Редактирование товара</h2>

@using (Html.BeginForm())
{
    @Html.EditorForModel()

    <button type="submit" class="btn btn-warning">Сохранить</button>
}