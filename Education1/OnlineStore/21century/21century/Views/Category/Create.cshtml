@model _21century.Models.Category

@{
    ViewBag.Title = string.Format("Создание категории | {0}", _21century.Constants.TITLE);
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<p>@Html.ActionLink("Отмена", "Index", "Home", new { @style = "color: #808080;" })</p>

<h2 style="color: #b200ff">Создание категории</h2>

@using (Html.BeginForm())
{
