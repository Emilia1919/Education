@model IEnumerable<_21century.Models.ContentManager>

@{
    ViewBag.Title = string.Format("Контент-менеджеры | {0}", _21century.Constants.TITLE);
}

<p>
    @Html.ActionLink("На главную", "Index", "Home")
    @_21century.Constants.BREADCRUMBS_SEPARATOR
    Контент-менеджеры
</p>

<h2>Контент-менеджеры</h2>

<p>@Html.ActionLink("Создать", "Create")</p>

<table>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.LastName
                &nbsp;
                @item.FirstName
                &nbsp;
                @item.MiddleName
            </td>
            <td style="padding-left:20px">
                @item.Login
            </td>
            <td style="padding-left:20px">
                @Html.ActionLink("Удалить", "Delete", new { username = item.Login }, new { onclick = "javascript:return confirm('Вы уверены?');" })
            </td>
        </tr>
    }
</table>