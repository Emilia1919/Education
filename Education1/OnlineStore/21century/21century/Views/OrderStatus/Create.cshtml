@model _21century.Models.OrderStatus

@{
    ViewBag.Title = string.Format("Создание статуса заказа | {0}", _21century.Constants.TITLE);
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<p>@Html.ActionLink("Отмена", "Index", null, new { @style = "color: #808080;" })</p>
<h2 style="color: #b200ff; padding-bottom: 15px">Создание статуса заказа</h2>

@using (Html.BeginForm())
{
    @Html.EditorFor(model => model.Name)
    <span style="color:Red">@Html.ValidationMessageFor(model => model.Name)</span>
    <br />

    <p style="padding-top: 5px"></p>
    <button type="submit" class="btn btn-warning">Создать</button>
}